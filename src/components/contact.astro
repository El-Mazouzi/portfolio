---
import CONTACTS from '~/static/contact'
import '~/styles/contact.css'
---

<section class='section contact' id='contact'>
	<div class='container'>
		<h2 class='section-title px-15'>Contact Me</h2>
		<div class='contact-container'>
			<div class='contact-box px-15'>
				<div class='contact-data'>
					<center class='contact-icon'>
						<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none"><path d="M14.22 21.63c-1.18 0-2.85-.83-4.17-4.8l-.72-2.16-2.16-.72c-3.96-1.32-4.79-2.99-4.79-4.17 0-1.17.83-2.85 4.79-4.18l8.49-2.83c2.12-.71 3.89-.5 4.98.58 1.09 1.08 1.3 2.86.59 4.98l-2.83 8.49c-1.33 3.98-3 4.81-4.18 4.81ZM7.64 7.03c-2.78.93-3.77 2.03-3.77 2.75 0 .72.99 1.82 3.77 2.74l2.52.84c.22.07.4.25.47.47l.84 2.52c.92 2.78 2.03 3.77 2.75 3.77.72 0 1.82-.99 2.75-3.77l2.83-8.49c.51-1.54.42-2.8-.23-3.45-.65-.65-1.91-.73-3.44-.22L7.64 7.03Z" fill="var(--color-primary)"></path><path d="M10.11 14.4c-.19 0-.38-.07-.53-.22a.754.754 0 0 1 0-1.06l3.58-3.59c.29-.29.77-.29 1.06 0 .29.29.29.77 0 1.06l-3.58 3.59c-.14.15-.34.22-.53.22Z" fill="var(--color-primary)"></path></svg>
				
				
					</center>
					<div class='contact-info'>
						<h3 class='contact-subtitle'>Text Me</h3>
						<a
							aria-label='call phone number'
							href={`tel:${CONTACTS.phoneNumber}`}
							class='contact-description'
						>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								viewBox='0 0 512 512'
							>
								<path
									d='M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z'
								></path>
							</svg>
							{CONTACTS.phoneNumber}
						</a>
					</div>

					<div class='contact-info'>
						<h3 class='contact-subtitle'>Email Me</h3>
						<a
							aria-label='send mail'
							href={`mailto:${CONTACTS.email}`}
							class='contact-description'
						>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								viewBox='0 0 512 512'
							>
								<path
									d='M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z'
								></path>
							</svg>
							{CONTACTS.email}
						</a>
					</div>
				</div>
			</div>

			<form
				action={`mailto:${CONTACTS.email}`}
				class='contact-form px-15'
			>
				<div class='contact-inputs'>
					<div class='contact-content'>
						<input
							id='email'
							type='email'
							name='email'
							placeholder='email'
							class='contact-input'
						/>
						<label for='email' class='contact-label'>Email</label>
						<span></span>
					</div>

					<div class='contact-content'>
						<input
							id='subject'
							type='text'
							name='subject'
							placeholder='subject'
							class='contact-input'
						/>
						<label for='subject' class='contact-label'
							>Subject</label
						>
						<span></span>
					</div>

					<div class='contact-content contact-area'>
						<textarea
							id='body'
							name='body'
							placeholder='Message'
							cols={30}
							rows={10}
							class='contact-input'></textarea>
						<label for='body' class='contact-label'>Message</label>
						<span></span>
					</div>
				</div>
				<button type='submit' class='btn btn-default'> Send</button>
			</form>
		</div>
	</div>
</section>
